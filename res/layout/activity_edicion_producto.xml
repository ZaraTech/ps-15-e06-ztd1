<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zaratech.smarket.aplicacion.EdicionProducto" >

    <!-- Imagen del producto -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/EDICION_IMAGEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/descripcionFoto"
                android:maxHeight="100dp"
                android:scaleType="matrix"
                android:src="@drawable/smarket" />

            <Button
                android:id="@+id/EDICION_CAMARA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edicionFoto" />

            <Button
                android:id="@+id/EDICION_GALERIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edicionGaleria" />
        </LinearLayout>

        <!-- Nombre del producto -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombreProducto"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/EDICION_NOMBRE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" >
            </EditText>
        </LinearLayout>

        <!-- Tipo de producto -->

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo" />

            <RadioButton
                android:id="@+id/EDICION_SMARTPHONE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoSmartphone" />

            <RadioButton
                android:id="@+id/EDICION_TABLET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoTablet" />
        </RadioGroup>

        <!-- DescripciÃ³n del producto -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/EDICION_DESCRIPCION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <!-- Pulgadas -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pulgadas"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/EDICION_PULGADAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Precio -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/EDICION_PRECIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>

        <!-- SO -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sistemaOperativo"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/EDICION_SO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/sistemasOperativos"
                android:prompt="@string/sistemaOperativo" />
        </LinearLayout>

        <!-- Marca -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marca"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/EDICION_MARCA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:entries="@array/edicionMarcas"
                    android:prompt="@string/marca" />

                <Button
                    android:id="@+id/EDICION_CREAR_MARCA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crearMarca" />

                <Button
                    android:id="@+id/EDICION_ELIMINAR_MARCA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminarMarca" />
            </LinearLayout>
        </LinearLayout>

        <!-- Oferta -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/EDICION_DESCUENTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oferta" />

            <EditText
                android:id="@+id/EDICION_DESCUENTO_PRECIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>

        <!-- Boton de guardado -->

        <Button
            android:id="@+id/EDICION_GUARDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar" />
    </LinearLayout>

</ScrollView>