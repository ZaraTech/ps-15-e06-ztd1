<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zaratech.smarket.aplicacion.InsertModificationProduct" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/AIMPProductImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/descripcion_foto"
                android:maxHeight="100dp"
                android:scaleType="matrix"
                android:src="@drawable/smarket" />

            <Button
                android:id="@+id/AIMPTakePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foto" />

            <Button
                android:id="@+id/AIMPGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/galeria" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/AIMPName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_producto"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/AIMPNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" >
            </EditText>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/AIMPRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckedTextView
                android:id="@+id/AIMPType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo" />

            <RadioButton
                android:id="@+id/AIMPSmartphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_smartphone" />

            <RadioButton
                android:id="@+id/AIMPTablet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_tablet" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/AIMPDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/AIMPDescriptionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/AIMPInches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pulgadas"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/AIMPInchesEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/AIMPPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/AIMPPriceEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/AIMPSO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sistema_operativo_prompt"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/AIMPSOSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/sistemas_operativos"
                android:prompt="@string/sistema_operativo_prompt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/AIMPBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marca_prompt"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/AIMPBrandSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:entries="@array/marca"
                    android:prompt="@string/marca_prompt" />

                <Button
                    android:id="@+id/AIMPBrandCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crear_marca" />

                <Button
                    android:id="@+id/AIMPBrandDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminar_marca" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/AIMPDiscountBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oferta" />

            <EditText
                android:id="@+id/AIMPDiscountNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/AIMPSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar" />
    </LinearLayout>

</ScrollView>